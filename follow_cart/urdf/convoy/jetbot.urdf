<?xml version="1.0" ?>
<robot name="JetBot"  xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find follow_cart)/urdf/convoy/jetbot.gazebo.xacro"/>

  <xacro:property name="M_PI_2" value="1.570796327"/>

  <link name="convoy/base_footprint"/>

  <link name="convoy/base_link">
    <inertial>
      <mass value="1.0"/>
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
    </inertial>
    <collision name="collision">
      <origin rpy="1.57079  0       1.57079" xyz="0     0     0.043"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/JetBot-v3-Chassis.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin rpy="1.57079  0       1.57079" xyz="0     0     0.043"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/JetBot-v3-Chassis.dae" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <link name="convoy/wheel_left_link">
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
    </inertial>
    <collision name="collision">
      <origin rpy="0  ${M_PI_2} 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.030" length="0.008"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/JetBot-v3-Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <link name="convoy/wheel_right_link">
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
    </inertial>
    <collision name="collision">
      <origin rpy="0  ${M_PI_2} 0" xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.030" length="0.008"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/JetBot-v3-Wheel.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <link name="convoy/camera_link">
    <inertial>
      <mass value="0.01"/>
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual name="visual">
      <origin rpy="0  0  0" xyz="0  0  0"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </visual>
  </link>

  <link name="convoy/base_scan">
    <inertial>
      <mass value="0.0"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <collision name="collision">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/lidar-base.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </collision>
    <visual name="visual">
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="file://$(find follow_cart)/meshes/convoy/lidar-base.dae" scale="1.0 1.0 1.0"/>
      </geometry>
    </visual>
  </link>

  <link name="convoy/imu_link"/>

  <joint name="convoy/base_joint" type="fixed">
    <parent link="convoy/base_footprint"/>
    <child link="convoy/base_link"/>
    <origin xyz="0.0 0.0 0.010" rpy="0 0 0"/>
  </joint>

  <joint name="convoy/wheel_left_joint" type="continuous">
    <parent link="convoy/base_link"/>
    <child link="convoy/wheel_left_link"/>
    <origin rpy="0       0       1.57079" xyz="0.03     0.05125  0.03"/>
    <axis xyz="1  0  0"/>
  </joint>

  <joint name="convoy/wheel_right_joint" type="continuous">
    <parent link="convoy/base_link"/>
    <child link="convoy/wheel_right_link"/>
    <origin rpy="0       0       1.57079" xyz="0.03   -0.0595  0.03"/>
    <axis xyz="1  0  0"/>
  </joint>

  <joint name="convoy/camera_joint" type="fixed">
    <parent link="convoy/base_link"/>
    <child link="convoy/camera_link"/>
    <origin rpy="0    0.25  0" xyz="0.065   0      0.0857"/>
    <axis xyz="0.96891  0       0.2474"/>
  </joint>

  <joint name="convoy/lidar_joint" type="fixed">
    <parent link="convoy/base_link"/>
    <child link="convoy/base_scan"/>
    <origin rpy="0   0   3.14" xyz="0.0 -0.0058  0.127"/>
    <axis xyz="0 0 0"/>
  </joint>

  <joint name="convoy/imu_joint" type="fixed">
    <parent link="convoy/base_link"/>
    <child link="convoy/imu_link"/>
    <origin xyz="0 0 0.01"/>
  </joint>

</robot>